{
  "manifest_version": 3,
  "name": "Go Local 2",
  "short_name": "Go Local 2",
  "version": "2.0.0",
  "author": "Aaron Olsen",
  "description": "Nextbot Developer Tool for Redirecting Website Network Traffic",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/scripts/*"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "24": "assets/disabled/cloud_24.png",
      "32": "assets/disabled/cloud_32.png",
      "48": "assets/disabled/cloud_48.png",
      "128": "assets/disabled/cloud_128.png"
    },
    "default_popup": "popup.html"
  }
}